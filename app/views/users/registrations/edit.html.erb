

<h2><%= t('users.titles.edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, t('users.fields.first_name') %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, t('users.fields.last_name') %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city, t('users.fields.city') %><br />
    <%= f.text_field :city, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :facebook, t('users.fields.facebook') %><br />
    <%= f.url_field :facebook, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :twitter, t('users.fields.twitter') %><br />
    <%= f.url_field :twitter, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t('users.fields.password') %> <i><%= t('users.tips.leave_blank') %></i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('users.fields.confirm_password')%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

   <%= f.label :kitchens, t('users.fields.kitchens') + ':' %>
  <%= f.collection_check_boxes :kitchen_ids, Kitchen.all, :id, :name do |preference| %>
    <div class="collection-check-box">
      <%= preference.check_box %>
      <%= preference.label %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('users.buttons.update') %>
  </div>
<% end %>

<h3><%= t('users.titles.cancel') %></h3>

<p><%= t('users.titles.unhappy') %> <%= button_to t('users.buttons.cancel'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to t('users.menu.links.back'), :back %>
