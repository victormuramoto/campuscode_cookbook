<span class="notice_message"><%= flash[:notice] %></span>
<% if user_signed_in? %>
  <p><%= link_to t('users.menu.links.liked_recipes'), favorite_recipes_path %> </p>
<% end %>
<% @recipes.each do |recipe| %>
  <p><%= t('recipes.fields.recipe_name') %>: <%= recipe.name %></p>
  <p><%= t('recipes.fields.difficult') %>: <%= recipe.difficult %></p>
  <p><%= t('recipes.fields.food_type') %>: <%= recipe.food_type.name %></p>
  <p><%= t('recipes.fields.food_preference') %>: <%= recipe.food_preference.name %></p>
  <p><%= t('recipes.fields.kitchen') %>: <%= recipe.kitchen.name %></p>
  <p><%= image_tag attachment_url(recipe, :image, :fill, 300, 300, format: "jpg") %></p>
<% end %>

<%= t('kitchen.filters') %>
<% @kitchens.each do |kitchen| %>
  <%= link_to kitchen.name, kitchen %>
<% end %>

<%= t('food_preference.filters') %>
<% @food_preferences.each do |food_preference| %>
  <%= link_to food_preference.name, food_preference %>
<% end %>
<%= t('food_type.filters') %>
<% @food_types.each do |food_type| %>
  <%= link_to food_type.name, food_type %>
<% end %>

<div class='favorites'>
  Favoritas
  <% @liked_recipes.each do |recipe| %>
    <%= recipe.name %>
    Likes: <%= recipe.likes %>
  <% end %>
</div>

